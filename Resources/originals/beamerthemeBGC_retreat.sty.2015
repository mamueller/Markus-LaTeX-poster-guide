\setbeamercolor{framesubtitle}{fg=white, bg=darkgray!90!black}
\setbeamercolor{author in head/foot}{fg=black, bg=white}
\setbeamercolor{title in head/foot}{fg=white, bg=darkgray!90!blackk}

\setbeamercolor*{normal text}{fg=black, bg=white}


% Set block colors and font sizes
%\setbeamercolor*{block body}{bg=lightgray}
\setbeamercolor*{block body}{bg=white}
\setbeamercolor*{block title}{bg=lightgray}
\setbeamerfont{block title}{size=\fontsize{50.0pt}{55.0pt}\selectfont}

\setbeamercolor{upper separation line head}{fg=structure.fg}

\setbeamercolor*{example body}{fg=lightgray,bg=black}
\setbeamercolor*{example text}{fg=lightgray,bg=black}
\setbeamercolor*{example title}{bg=white,fg=darkgray!90!black}








% ------
% Header
% ------


\setbeamertemplate{headline}{  
  \leavevmode

      \begin{beamercolorbox}[wd=1\paperwidth]{headline}
    
      \vspace*{3ex}    
    
      % Headline with logos
      \begin{columns}
	  \usebeamercolor{normaltext}
      %\vspace*{4ex}
      \vspace*{17.4mm}
      \begin{column}{.48\textwidth}
	  		\hspace*{0.2cm}
			%\includegraphics[width=0.1\linewidth]{Minerva.pdf}
			\includegraphics[height=51.2mm]{Minerva.pdf}
	  \end{column}
	  \begin{column}{.48\textwidth}
	        \flushright
    		%\includegraphics[width=0.4\linewidth]{BGC_LogoText_en.pdf}
    		\includegraphics[height=49.5mm]{BGC_LogoText_en.pdf}
	        \hspace*{0.2cm}
	  \end{column}
      \end{columns}
    

      	\usebeamercolor{headline}
        \vskip5ex
        \centering
        \usebeamercolor{title in headline}{\color{fg}{\fontsize{90.0pt}{90.0pt}\selectfont\mytitle} \\ [8ex]}
        \usebeamercolor{author in headline}{\color{fg}{\fontsize{50.0pt}{100.0pt}\selectfont\myauthor} \\ [2ex]}
		\end{beamercolorbox}

    
    \vskip2.5ex
    


  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{18pt}
  \end{beamercolorbox}
}




