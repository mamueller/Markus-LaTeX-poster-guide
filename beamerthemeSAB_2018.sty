% ----------
% Set colors
% ----------

	\definecolor{darkgray}{RGB}{181, 181, 181}
	\definecolor{lightgray}{RGB}{248, 248, 248}
	
	
	\setbeamercolor{structure}{fg=black}
	\setbeamercolor{headline}{fg=white,bg=lightgray}
	
	\setbeamercolor{footcol}{fg=darkgray, bg=lightgray}
	%\setbeamercolor{footcol}{fg=white, bg=darkgray}
	
	\setbeamerfont{footline}{size=\fontsize{50.0pt}{50.0pt}\selectfont,series=\sf}
	%\setbeamercolor{separation line}{bg=darkgray}
	
	
	\setbeamercolor{title in headline}{fg=black}
	\setbeamercolor{author in headline}{fg=black}
	\setbeamercolor{institute in headline}{fg=black, bg=lightgray}
	
	\setbeamercolor{framesubtitle}{fg=white, bg=darkgray!90!black}
	\setbeamercolor{author in head/foot}{fg=black, bg=white}
	\setbeamercolor{title in head/foot}{fg=white, bg=darkgray!90!blackk}
	
	\setbeamercolor*{normal text}{fg=black, bg=darkgray}
	
	
	% Set block colors and font sizes
	\setbeamercolor*{block body}{bg=white}
	\setbeamercolor*{block title}{bg=white, fg=darkgray}
	\setbeamerfont{block title}{size=\fontsize{50.0pt}{55.0pt}\selectfont}
	
	\setbeamercolor{upper separation line head}{fg=structure.fg}
	
	\setbeamercolor*{example body}{fg=lightgray,bg=black}
	\setbeamercolor*{example text}{fg=lightgray,bg=black}
	\setbeamercolor*{example title}{bg=white,fg=darkgray!90!black}

	\mode<all>
